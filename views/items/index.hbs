<nav>
  <div class="nav-wrapper">
    <a href="/{{user.username}}" class="brand-logo">Retro'd {{user.name}}</a>
    <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
      <li>{{retro.title}} Items</li>
      <li><a href="/{{user.username}}/{{retro._id}}">{{retro.title}}</a></li>
      <li><a href="/{{user.username}}">Retros</a></li>
      <li><a href="/">Logout</a></li>
    </ul>
    <ul class="side-nav" id="mobile-demo">
      <li>{{retro.title}} Items</li>
      <li><a href="/{{user.username}}/{{retro._id}}">{{retro.title}}</a></li>
      <li><a href="/{{user.username}}">Retros</a></li>
      <li><a href="/">Logout</a></li>
    </ul>
  </div>
</nav>

<main>
<div class="container">
  <div class="header">
    <h4>Action Items:</h4>
  </div>
  {{#each retro.retroItems}}
  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.title}}</span>
          <p>{{this.description}}</p>
          <ul>
            <li>Prioirty: {{this.priority}}</li>
            <li>Due Date: <span class='duedate'>{{this.dueDate}}</span></li>
            <li>Responsible: {{this.responsible}}</li>
          </ul>
        </div>
        <div class="card-action">
          <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edit Item" href="/{{../user.username}}/{{../retro._id}}/item/{{this._id}}/edit"><i class="small material-icons">edit</i></a>
          <a class="modal-trigger tooltipped" data-position="bottom" data-delay="50" data-tooltip="Delete item" href="#modal{{this._id}}"><i class="small material-icons">delete_forever</i></a>
          <div id="modal{{this._id}}" class="modal">
            <div class="modal-content">
              <h5>Delete Action Item</h5>
              <p>Are you sure you want to Delete</p>
            </div>
            <div class="modal-footer">
              <a href="/{{../user.username}}/{{../retro._id}}/item/{{this._id}}/delete" class="modal-action modal-close waves-effect waves-green btn-flat"
                alt="Delete Retro">Agree</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</main>