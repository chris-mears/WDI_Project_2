<div class="container">
    <h2>{{user.name}}</h2>
    <a href="/">Log out!</a>
    <div class="row flex-m">
        <div class="col s12 m12 l6 retros">
            <div class="retro_header">
                <h4>Retros:</h4>
                <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Create Retro" href="/{{user.username}}/new">
                        <i class="small material-icons">add_box</i>
                </a>
            </div>
            {{#each user.retros}} {{#unless this.completed}}
            <div class="retro">
                <h4><a href="/{{../user.username}}/{{this._id}}">{{this.title}}</a></h4>
                <p>{{this.description}}</p>
                <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Create Action item" href="/{{../user.username}}/{{this._id}}/useritem/new">
                        <i class="small material-icons">add_box</i>
                </a>
                <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edit Retro" href="/{{../user.username}}/{{this._id}}/edit" alt="Edit Retro">
                        <i class="small material-icons">edit</i>
                </a>


                <a class="modal-trigger tooltipped" data-position="bottom" data-delay="50" data-tooltip="Delete Retro" href="#modal{{this._id}}">
                        <i class="small material-icons">delete_forever</i>
                </a>

                <!-- Modal Structure -->
                <div id="modal{{this._id}}" class="modal">
                    <div class="modal-content">
                        <h4>Delete Retro</h4>
                        <p>Are you sure you want to Delete</p>
                    </div>
                    <div class="modal-footer">
                        <a href="/{{../user.username}}/{{this._id}}/delete" class="modal-action modal-close waves-effect waves-green btn-flat" alt="Delete Retro">Agree</a>
                    </div>
                </div>
            </div>
            {{/unless}} {{/each}} {{#each user.retros}} {{#if this.completed}}
            <div class="completretros">
                <h4>Completed Retros</h4>
                <h4><a href="/{{../user.username}}/{{this._id}}">{{this.title}}</a></h4>
                <p>{{this.description}}</p>
                <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edit Retro" href="/{{../user.username}}/{{this._id}}/edit" href="/{{../user.username}}/{{this._id}}/edit"><i class="small material-icons">edit</i></a>
                
                
                <a class="modal-trigger tooltipped" data-position="bottom" data-delay="50" data-tooltip="Delete Retro" href="#modal{{this._id}}">
                        <i class="small material-icons">delete_forever</i>
                </a>

                <!-- Modal Structure -->
                <div id="modal{{this._id}}" class="modal">
                    <div class="modal-content">
                        <h4>Delete Retro</h4>
                        <p>Are you sure you want to Delete</p>
                    </div>
                    <div class="modal-footer">
                        <a href="/{{../user.username}}/{{this._id}}/delete" class="modal-action modal-close waves-effect waves-green btn-flat" alt="Delete Retro">Agree</a>
                    </div>
                </div>





            </div>
            {{/if}} {{/each}}
        </div>
        <div class="col s0 m0 l1"> </div>
        <div class="col s12 m12 l5 items">
            <h4>Action Items:</h4>
            {{#each user.retros}} {{#unless this.completed}}
            <h5>{{this.title}}</h5>
            <ul class="collapsible" data-collapsible="accordion">
                {{#each this.retroItems}}
                <li>
                    <div class="collapsible-header">
                        <a href="/{{../../userName}}/{{../this._id}}/{{this._id}}">{{this.title}}</a>
                        <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edit item" href="/{{../../userName}}/{{../this._id}}/{{this._id}}/useritem/edit"><i class="tiny material-icons">edit</i></a>

                        <a class="modal-trigger tooltipped" data-position="bottom" data-delay="50" data-tooltip="Delete item" href="#modal{{this._id}}">
                            <i class="tiny material-icons">delete_forever</i>
                    </a>
                        <div id="modal{{this._id}}" class="modal">
                            <div class="modal-content">
                                <h5>Delete Action Item</h5>
                                <p>Are you sure you want to Delete</p>
                            </div>
                            <div class="modal-footer">
                                <a href="/{{../../userName}}/{{../this._id}}/{{this._id}}/user/delete" class="modal-action modal-close waves-effect waves-green btn-flat"
                                    alt="Delete Retro">Agree</a>
                            </div>
                        </div>
                        <span class="badge {{this.priority}}">{{this.priority}}</span>
                    </div>
                    <div class="collapsible-body"><span>Responsible: {{this.responsible}}<br>Progress: {{this.progress}}<br>Due Date: <span class='duedate'>{{this.dueDate}}</span></span>
                    </div>
                </li>
                {{/each}}

            </ul>
            {{/unless}} {{/each}}
        </div>
    </div>
</div>